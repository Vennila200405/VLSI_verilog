module priority_encoder_tb;
  reg[3:0]d;
  wire[1:0]y;
  priority_encoder DUT(.d(d),.y(y));
  initial begin
    $dumpfile("dump.vcd");
    $dumpvars;
    $monitor("d=%b,y=%b",d,y);
    
    d[3]=0; d[2]=0; d[1]=0; d[0]=0;  #2
    d[3]=0; d[2]=0; d[1]=0; d[0]=1;  #2
    d[3]=0; d[2]=0; d[1]=1; d[0]=1'bx;  #2
    d[3]=0; d[2]=1; d[1]=1'bx; d[0]=1'bx;  #2
    d[3]=1; d[2]=1'bx; d[1]=1'bx; d[0]=1'bx;  #20
    $finish;
  end
endmodule
    
  
